[user]
	name = Eike
	email = eikek@posteo.de
[core]
	excludesfile = ~/.git.global.ignore
	autocrlf = input
	editor = emacsclient -nw

[color]
	ui = true
[log]
	decorate = short
[push]
	default = matching
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	required = true
[github]
	user = eikek
[blame]
	ignoreRevsFile = .git-blame-ignore-revs
